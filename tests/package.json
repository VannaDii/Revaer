    "codegen": "playwright codegen $E2E_BASE_URL"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.0",
    "dotenv": "^16.4.7",
    "openapi-fetch": "^0.12.2",
    "openapi-typescript": "^6.7.3"
  }
}
