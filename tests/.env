# Base URL where the Revaer UI is running.
E2E_BASE_URL=http://localhost:8080

# Base URL where the Revaer API is running.
E2E_API_BASE_URL=http://localhost:7070

# Admin connection string used to create temp databases for E2E.
E2E_DB_ADMIN_URL=postgres://revaer:revaer@localhost:5432/postgres

# Prefix used when generating temp database names.
E2E_DB_PREFIX=revaer_e2e

# Filesystem root used by /v1/fs/browse and torrent authoring tests (relative to repo root).
E2E_FS_ROOT=.server_root/library

# Session file used by global setup/teardown.
E2E_SESSION_PATH=.auth/session.json

# Auth mode for API suites: api_key or none (usually set by just ui-e2e).
# E2E_AUTH_MODE=api_key

# Browser selection: chromium, firefox, webkit (comma-separated).
E2E_BROWSERS=chromium

# Headless mode and timeouts.
E2E_HEADLESS=true
E2E_TEST_TIMEOUT_MS=30000
E2E_EXPECT_TIMEOUT_MS=5000
E2E_ACTION_TIMEOUT_MS=10000
E2E_NAVIGATION_TIMEOUT_MS=15000

# Artifacts and retries.
E2E_RETRIES=0
E2E_TRACE=on-first-retry
E2E_VIDEO=retain-on-failure
E2E_SCREENSHOT=only-on-failure

# Viewport sizing.
E2E_VIEWPORT_WIDTH=1440
E2E_VIEWPORT_HEIGHT=900
